<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="15dp">
        <TextView
            android:id="@+id/hello"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"
            android:textSize="27sp"
            android:textColor="@color/green"
            android:textStyle="bold"
            android:text="Bienvenue"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginBottom="15dp"
            android:layout_height="wrap_content"
            android:foregroundGravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/canard"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:src="@drawable/canard"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:onClick="onCanardClick"/>

            <ImageView
                android:id="@+id/chat"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/chat"
                android:onClick="onChatClick"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:foregroundGravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/cheval"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:src="@drawable/cheval"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:onClick="onChevalClick"/>

            <ImageView
                android:id="@+id/chien"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/chien"
                android:onClick="onChienClick"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:foregroundGravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/dauphin"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:src="@drawable/dauphin"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:onClick="onDaulphinClick"/>

            <ImageView
                android:id="@+id/elephant"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/elephant"
                android:onClick="onElephantClick"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:foregroundGravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/girafe"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:src="@drawable/girafe"
                android:onClick="onGirafeClick"/>

            <ImageView
                android:id="@+id/kangourou"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/kangourou"
                android:onClick="onKangourouClick"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:foregroundGravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/lion"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:src="@drawable/lion"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:onClick="onLionClick"/>

            <ImageView
                android:id="@+id/panda"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/panda"
                android:onClick="onPandaClick"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:foregroundGravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/singe"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:src="@drawable/singe"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:onClick="onSingeClick"/>

            <ImageView
                android:id="@+id/zebre"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/zebre"
                android:onClick="onZebreClick"/>

        </LinearLayout>

    </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>